function updateGames() {
  const gameGrid = document.querySelector('#game-grid');
  const liveRanking = document.querySelector('#live-ranking');
  const matchdayRanking = document.querySelector('#matchday-ranking');
  if (gameGrid && liveRanking) {
    gameGrid.innerHTML = "<%= j render 'shared/games_live', games: @games %>"
    liveRanking.innerHTML = "<%= j render 'shared/users_ranking', users: @users %>"
    matchdayRanking.innerHTML = "<%= j render 'shared/matchday_ranking', ranking: @matchday_ranking, matchday: @matchday %>"
  }
}

updateGames();
