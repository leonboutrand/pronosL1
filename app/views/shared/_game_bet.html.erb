<% bet = game.bets.find { |bet| bet.user == current_user } %>
<%= game.team_home.name %>

<%= game.status != 'open' ? "#{game.score_home} - #{game.score_away}" : '-' %>

<%= render 'shared/bet_form', bet: Bet.new, game_id: game.id unless (bet || game.status != 'open') %>

<%= game.team_away.name %>

<%= "(#{bet.score_home} - #{bet.score_away})" if bet %>
